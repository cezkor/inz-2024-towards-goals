<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:orientation="horizontal"
    app:columnCount="2"
    app:rowCount="2">


    <TextView
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/ifTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/impints_if_label"
        app:layout_columnWeight="0"/>

    <FrameLayout

        android:background="@color/if_color"
        app:layout_columnWeight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:gravity="top"
            android:layout_margin="3dp"
            android:id="@+id/triggerTextView"
            style="@style/Widget.Style.TowardsGoalsApp.ImpIntTextAppearance"

            android:text="@string/impints_trigger_label"

            />

    </FrameLayout>

    <TextView
        android:minHeight="48dp"
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/thenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/impints_if_then_label"
        app:layout_columnWeight="0"/>

    <FrameLayout

        android:layout_margin="2dp"
        android:background="@color/then_color"
        app:layout_columnWeight="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:minHeight="48dp"
            android:gravity="top"
            android:layout_margin="3dp"
            android:id="@+id/reactionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/impints_reaction_label"
            style="@style/Widget.Style.TowardsGoalsApp.ImpIntTextAppearance"
            />


    </FrameLayout>




</androidx.gridlayout.widget.GridLayout>
