<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:orientation="horizontal"
    app:columnCount="2"
    app:rowCount="2">


    <TextView
        android:id="@+id/ifTextView"
        android:layout_width="wrap_content"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:layout_margin="2dp"
        android:gravity="top"
        android:text="@string/impints_if_label"
        app:layout_columnWeight="0" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_columnWeight="1"
        android:background="@color/if_color">

        <TextView
            android:id="@+id/triggerTextView"
            style="@style/Widget.Style.TowardsGoalsApp.ImpIntTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="top"
            android:minHeight="48dp"
            android:text="@string/impints_trigger_label" />

    </FrameLayout>

    <TextView
        android:id="@+id/thenTextView"
        android:layout_width="wrap_content"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_columnWeight="0"
        android:gravity="top"
        android:minHeight="48dp"
        android:text="@string/impints_if_then_label" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:layout_columnWeight="1"
        android:background="@color/then_color">

        <TextView
            android:id="@+id/reactionTextView"
            style="@style/Widget.Style.TowardsGoalsApp.ImpIntTextAppearance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="top"
            android:minHeight="48dp"
            android:text="@string/impints_reaction_label" />
    </FrameLayout>
</androidx.gridlayout.widget.GridLayout>

