<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:columnCount="4"
    app:rowCount="4">

    <View
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="0"
        app:layout_column="0"
        />
    <View
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="0"
        app:layout_column="1"
        />

    <FrameLayout
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="0"
        app:layout_column="2"
        app:layout_columnSpan="2">
        <TextView
            app:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:text="@string/tasks_urgency"

            />
    </FrameLayout>

    <View
        android:layout_height="0dp"
        android:layout_width="0dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="1"
        app:layout_column="0"
        />
    <View
        android:layout_height="40dp"
        android:layout_width="40dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="1"
        app:layout_column="1"
        />

    <FrameLayout
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="1"
        app:layout_column="2">
        <TextView
            app:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:text="@string/tasks_urgency_urgent"

            />
    </FrameLayout>

    <FrameLayout
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="20dp"
        android:layout_width="wrap_content"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="1"
        app:layout_column="3">
        <TextView
            app:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_width="wrap_content"
            android:text="@string/tasks_urgency_not_urgent"

            />
    </FrameLayout>

    <FrameLayout
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="20dp"
        app:layout_rowSpan="2"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="2"
        app:layout_column="0">
        <org.cezkor.towardsgoalsapp.etc.TopDownVerticalTextView

            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="@string/tasks_importance"
            />

    </FrameLayout>

    <FrameLayout
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="20dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="2"
        app:layout_column="1">

        <org.cezkor.towardsgoalsapp.etc.TopDownVerticalTextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="@string/tasks_importance_important"
            />

    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:id="@+id/recyclerView1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minWidth="50dp"
        android:minHeight="50dp"
        app:layout_column="2"
        app:layout_columnWeight="1"
        android:layout_margin="10dp"
        app:layout_row="2"
        app:layout_rowWeight="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:padding="2dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id = "@+id/recyclerView2"
        app:layout_row="2"
        app:layout_column="3"
        android:background="@drawable/rectangle"
        />

    <FrameLayout
        android:layout_margin="10dp"
        app:layout_gravity="center"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_height="wrap_content"
        android:layout_width="20dp"
        app:layout_columnWeight="0"
        app:layout_rowWeight="0"
        app:layout_row="3"
        app:layout_column="1">
        <org.cezkor.towardsgoalsapp.etc.TopDownVerticalTextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="@string/tasks_importance_not_important"
            />
    </FrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id = "@+id/recyclerView3"
        app:layout_row="3"
        app:layout_column="2"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:background="@drawable/rectangle"
        android:padding="2dp"
        android:layout_margin="10dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1"
        android:id = "@+id/recyclerView4"
        app:layout_row="3"
        app:layout_column="3"
        />


</androidx.gridlayout.widget.GridLayout>