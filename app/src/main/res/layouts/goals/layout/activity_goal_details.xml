<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/goalToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintBottom_toTopOf="@+id/goalLinearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <LinearLayout
        android:id="@+id/goalLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalToolbar">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/goalTabs"
            style="@style/Widget.Style.TowardsGoalsApp.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:forceDarkAllowed="true"
            app:tabGravity="fill"
            app:tabIndicatorFullWidth="true"
            app:tabMaxWidth="0dp">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/goalTaskTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tasks_name_plural" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/goalHabitTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/habits_name_plural" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/goalStatsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stats_name" />

        </com.google.android.material.tabs.TabLayout>

        <FrameLayout
            android:id="@+id/goalFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="815" >

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>