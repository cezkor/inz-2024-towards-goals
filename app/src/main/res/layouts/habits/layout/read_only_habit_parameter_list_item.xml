<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    app:orientation="horizontal"
    app:columnCount="4"
    app:rowCount="2">


    <TextView
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterNameLabel"
        android:layout_width="wrap_content"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        android:text="@string/habits_params_name"
        app:layout_columnWeight="0"
        android:minHeight="48dp"/>

    <TextView

        android:maxLines="1"
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterNameTextView"
        android:layout_width="0dp"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        app:layout_columnSpan="3"
        app:layout_columnWeight="3"
        android:minHeight="48dp"/>

    <TextView
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterTargetValueLabel"
        android:layout_width="wrap_content"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        android:text="@string/habits_params_expected_value"
        app:layout_columnWeight="0"
        android:minHeight="48dp"/>

    <TextView
        android:maxLines="1"
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterTargetValueTextView"
        android:layout_width="0dp"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="3"
        android:minHeight="48dp"/>

    <TextView
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterUnitLabel"
        android:layout_width="wrap_content"
        android:minWidth="10dp"
        android:layout_height="wrap_content"
        android:text="@string/habits_params_unit_not_optional"
        app:layout_columnWeight="0"
        android:minHeight="48dp"/>

    <TextView
        android:maxLines="1"
        android:text="@string/habits_params_no_unit"
        android:gravity="top"
        android:layout_margin="2dp"
        android:id="@+id/parameterUnitTextView"
        android:layout_width="0dp"
        android:minWidth="24dp"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:minHeight="48dp"/>


</androidx.gridlayout.widget.GridLayout>