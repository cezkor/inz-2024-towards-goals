<resources>

    <style name="Widget.Theme.TowardsGoalsApp.MainActivityView" parent="">
        <item name="android:background">@color/gray_600</item>
    </style>
    <style name="Widget.Style.TowardsGoalsApp.TextView" parent="">
        <item name="android:textColor">@color/gray_800</item>
    </style>
    <style name="Widget.Style.TowardsGoalsApp.TitleTextView" parent="">
        <item name="android:textColor">@color/gray_800</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.TabTextAppearance" parent="">
        <item name="android:textColor">@color/neon_purple</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.TabLayout" parent="">

        <item name="tabSelectedTextColor">@color/neon_strong_purple</item>
        <item name="tabTextColor">@color/neon_purple</item>
        <item name="tabIndicatorColor">@color/neon_purple</item>
        <item name="tabIconTint">@color/transparent</item>

    </style>

    <style name="Widget.Style.TowardsGoalsApp.TimeTextView" parent="">
        <item name="android:textColor">@color/progress_red</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.BigTextView" parent="">
        <item name="android:textSize">60sp</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.LargeTextView" parent="">
        <item name="android:textSize">38sp</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.ImpIntEditTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColorHint">@color/gray_800</item>
        <item name="android:colorControlActivated">@color/black</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.ImpIntTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <!--   leave everything as it is in Body2   -->
    </style>

    <style name="Widget.Style.TowardsGoalsApp.ToolbarStyle" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.MenuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.DoneButton" parent="">
        <item name="backgroundTint">@color/progress_green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.OtherButton" parent="">
        <item name="backgroundTint">@color/light_blue_400</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.FailedButton" parent="">
        <item name="backgroundTint">@color/progress_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>