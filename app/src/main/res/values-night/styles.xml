<resources>

    <style name="Widget.Theme.TowardsGoalsApp.MainActivityView" parent="">
        <item name="android:background">@color/black</item>
    </style>
    <style name="Widget.Theme.TowardsGoalsApp.InnerView" parent="">
        <item name="android:background">@color/less_black</item>
    </style>
    <style name="Widget.Style.TowardsGoalsApp.TextView" parent="">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.Style.TowardsGoalsApp.TitleTextView" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.TabTextAppearance" parent="">
        <item name="android:textColor">@color/bland_darker_purple</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.TabLayout" parent="">

        <item name="tabSelectedTextColor">@color/bland_more_purple</item>
        <item name="tabTextColor">@color/bland_darker_purple</item>
        <item name="tabIndicatorColor">@color/bland_darker_purple</item>
        <item name="tabIconTint">@color/transparent</item>

    </style>

    <style name="Widget.Style.TowardsGoalsApp.ImpIntEditTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.ImpIntTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/impint_text_at_night_color</item>
        <item name="android:textColorHint">@color/impint_text_at_night_color</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.ToolbarStyle" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.MenuItem" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.DoneButton" parent="">
        <item name="backgroundTint">@color/progress_green</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Style.TowardsGoalsApp.FailedButton" parent="">
        <item name="backgroundTint">@color/progress_red</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>